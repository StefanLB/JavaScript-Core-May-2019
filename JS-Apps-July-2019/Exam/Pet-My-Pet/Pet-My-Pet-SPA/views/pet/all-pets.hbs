{{>header}}
<section class="dashboard">
    <h1>Dashboard</h1>
    <nav class="navbar">
        <ul>
            <li><a href="#/pet/all">All</a></li>
            <li><a href="#/pet/cat">Cats</a></li>
            <li><a href="#/pet/dog">Dogs</a></li>
            <li><a href="#/pet/parrot">Parrots</a></li>
            <li><a href="#/pet/reptile">Reptiles</a></li>
            <li><a href="#/pet/other">Other</a></li>
        </ul>
    </nav>
    <ul class="other-pets-list">
        {{#each pets}}
        <li class="otherPet">
            <h3>Name: {{name}}</h3>
            <p>Category: {{category}}</p>
            <p class="img"><img src="{{imageURL}}"></p>
            <p class="description">{{description}}</p>
            <div class="pet-info">
                <a href="#/pet/like/{{_id}}"><button class="button"><i class="fas fa-heart"></i> Pet</button></a>
                <a href="#/pet/details/{{_id}}"><button class="button">Details</button></a>
                <i class="fas fa-heart"></i> <span> {{likes}}</span>
            </div>
        </li>
        {{/each}}
    </ul>
</section>
{{>footer}}
